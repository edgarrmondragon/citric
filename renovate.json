{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "edgarrmondragon"
  ],
  "reviewers": [
    "edgarrmondragon"
  ],
  "docker": {
    "versioning": "docker",
    "enabled": true
  },
  "docker-compose": {
    "fileMatch": [
      "(^|/)docker-compose[^/]*\\.ya?ml$"
    ],
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "semanticCommitType": "deps-optional"
    }
  ],
  "poetry": {
    "fileMatch": [
      "(^|/)pyproject\\.toml$"
    ],
    "rangeStrategy": "update-lockfile"
  },
  "prHourlyLimit": 10,
  "schedule": [
    "at any time"
  ],
  "stabilityDays": 0,
  "automergeStrategy": "squash"
}
